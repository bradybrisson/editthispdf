apiVersion: apps/v1
kind: Deployment
metadata:
  name: editthispdf
  namespace: default
spec:
  replicas: 2
  selector:
    matchLabels:
      app: editthispdf
  template:
    metadata:
      labels:
        app: editthispdf
    spec:
      containers:
      - name: app
        image: {{IMAGE}}
        imagePullPolicy: IfNotPresent
        ports:
        - name: http
          containerPort: 8080
        resources:
          requests:
            cpu: "100m"
            memory: "100Mi"
          limits:
            memory: "100Mi"
        readinessProbe:
          httpGet:
            path: /
            port: 8080
            scheme: HTTP
          initialDelaySeconds: 2
          periodSeconds: 5
          timeoutSeconds: 2
          failureThreshold: 3
        livenessProbe:
          httpGet:
            path: /
            port: 8080
            scheme: HTTP
          initialDelaySeconds: 5
          periodSeconds: 10
          timeoutSeconds: 2
          failureThreshold: 3

---
apiVersion: v1
kind: Service
metadata:
  name: editthispdf
  namespace: default
spec:
  selector:
    app: editthispdf
  ports:
  - name: http
    port: 8080
    targetPort: 8080

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: editthispdf
  namespace: default
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/modsecurity-snippet: SecRuleEngine Off SecAuditEngine Off
spec:
  rules:
  - host: editthispdf.com
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: editthispdf
            port:
              number: 8080
  - host: www.editthispdf.com
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: editthispdf
            port:
              number: 8080
  tls:
  - hosts:
    - editthispdf.com
    - www.editthispdf.com
    secretName: editthispdf-tls


